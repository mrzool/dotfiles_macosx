# Files and folders
alias ls='ls -Gh'
alias l='ls'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

alias tolowercase='sh ~/bin/tolowercase.sh'
alias tounderscore='sh ~/bin/tounderscore.sh'

#System
alias poweroff='shutdown -h now'

#Terminal
alias c='clear'
alias e='exit'

# Package management
alias backport='apt-get -t wheezy-backports install'
alias installed='dpkg --get-selections'

# Git aliases
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias gap="git add -p"
alias gc="git commit -v"
alias gac="git commit -av"
alias gb="git branch"
alias gck="git checkout"
alias gpl="git pull"
alias gps="git push"
alias new-project="git clone git@github.com:mrmrs/trim.git"

# Networking
alias a2restart="sudo service apache2 restart"
alias sss='python -m SimpleHTTPServer 8888 &'
alias showip="sh ~/bin/showip.sh"
alias guard='bundle exec guard'

# Jump and Marks 
alias ju='jump'
alias mm='mark'
alias um='unmark'

# Various
alias kindlesend='mutt zool.bib@kindle.com -s "new book" -a'
alias kindlegen='~/bin/kindlegen'
alias colorpicker="gcolor2"
alias calc="qalc"
alias mpdncmpcpp="sh ~/bin/mpdncmpcpp.sh"
alias mrregister="sh ~/bin/mrregister.sh"
alias unrar="unrar x"
alias gtypist="gtypist -S"
